<h1>Search Historical Prices on Yahoo Finance</h1>


<%= form_tag('/search_results', method: "get") do %>
  <%= label_tag(:q, "Look up historical prices for stocks") %>
  <%= text_field_tag :q, params[:q], placeholder: "i.e. TSLA" %>
  <%= submit_tag("Search") %>
<% end %>


<%= content_tag :canvas, "", id: "stock_history_chart", height: "180", data: {stock: @stock } %>


<div id="stock-box"></div>

<div class="search-results"></div>